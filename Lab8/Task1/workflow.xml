<workflow-app name="CommonFriends" xmlns="uri:oozie:workflow:0.4">
    <start to="mapred"/>
    <action name="mapred">
		<java>
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
			<prepare>
			   <delete path="${nameNode}/tmp/Lab8/output"/>
			</prepare>
			<main-class>edu.rosehulman.laeschjs.Friends</main-class>
			<arg>${nameNode}/tmp/Lab8/input</arg>
			<arg>${nameNode}/tmp/Lab8/output</arg>
		</java>
		<ok to="end"/>
		<error to="kill"/>
    </action>
    <kill name="kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
