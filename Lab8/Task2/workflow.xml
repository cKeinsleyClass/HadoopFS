<workflow-app name="Sqoop" xmlns="uri:oozie:workflow:0.4">
    <start to="Export"/>
    <action name="Export">
        <sqoop xmlns="uri:oozie:sqoop-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
              <job-xml>/tmp/shared/hive-site.xml</job-xml>
            <command>export --connect jdbc:mysql://10.128.0.3:3306/oozie --username root -m 1 --table nums --hcatalog-database nums --hcatalog-table Nums --skip-dist-cache </command>
        </sqoop>
        <ok to="end"/>
        <error to="kill"/>
    </action>
    <kill name="kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name="end"/>
</workflow-app>
